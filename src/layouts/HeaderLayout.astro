---
interface Props {
    title?: string;
}

const { title = "Hyun-Tak-Lee" } = Astro.props;
---

<header class="home__header">
    <div class="headerLayout">
        <h1>{title}</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </nav>
    </div>
</header>

<style>
    .home__header {
        width: 100%;
        padding: 1rem;
    }

    .headerLayout {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    nav ul {
        display: flex;
        gap: 2rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }

    nav a {
        text-decoration: none;
        color: inherit;
    }

    nav a:hover {
        text-decoration: underline;
    }
</style> 