---
const {
  size = "24px",
  color = "light-dark(rgba(0, 0, 0, 0.9),rgba(255,255,255,0.9))",
} = Astro.props;
---

<svg
  width={size}
  height={size}
  viewBox="0 0 24 24"
  xmlns="http://www.w3.org/2000/svg"
>
  <line
    x1="6"
    y1="7"
    x2="18"
    y2="7"
    stroke={color}
    stroke-width="3"
    stroke-linecap="round"></line>
  <line
    x1="6"
    y1="12"
    x2="18"
    y2="12"
    stroke={color}
    stroke-width="3"
    stroke-linecap="round"></line>
  <line
    x1="6"
    y1="17"
    x2="18"
    y2="17"
    stroke={color}
    stroke-width="3"
    stroke-linecap="round"></line>
</svg>
